		<color r="46" g="252" b="51" a="1"/>
	</beaconType>
	<text load="TEXT_EMV_DROPPOINT_GUARD"/>
	<customFleet right="false" firing="false" autoDarkening="true">EMV_CUSTOM_FLEET_MVPMC</customFleet>
	<changeBackground>BACK_SECTOR_FEDERATION</changeBackground>
	<playSound>lightspeed</playSound>
	<choice hidden="true">
		<text>Continue...</text>
		<event load="EMV_DROPPOINT_GUARDS"/>
	</choice>
