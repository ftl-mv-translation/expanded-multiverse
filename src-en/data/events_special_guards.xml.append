	<!--<modifyPursuit amount="-1"/>-->
	<ship load="SHIP_GUARD_EMV_ENGI"/>
	<choice hidden="true" req="emv_rep_renegades" lvl="-999" max_lvl="2" max_group="0" blue="false">
		<text>Proceed with the inspection.</text>
		<event load="EMV_GUARD_ENGI_INSPECTION"/>
	</choice>
	<choice hidden="true" req="emv_rep_renegades" lvl="3" max_lvl="999" max_group="0" blue="false">
		<text>Continue...</text>
